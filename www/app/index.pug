doctype html
html(lang="en")
	head
		<meta name="viewport" content="width=device-width; initial-scale=1.0">
		<meta charset="UTF-8">
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=cyrillic")
		title Форма для mos.ru

	body

		main.form_container
			form(class="form" autocomplite="on" name="form")
				section.left
					.container
						legend Ваши данные
						div.fieldset
							label
								input(type="text" name="fio" autofocus required)
								span
								.placeholder Введите ФИО

							label
								input(type="password" name="pass" required)
								span
								.placeholder Пароль

							label
								input(type="text" name="email" required )
								span
								.placeholder Email

							label
								select#list.placeholder_out(name="city")
									option(selected disabled) 
									option Москва	
									option Санкт-Петербург	
									option Казань	
								.placeholder Город

							label
								input#tel.placeholder_out(type="tel" name="phone")
								span
								.placeholder Телефон

							.gender
								label
									input(type="radio" name="gender" checked)
									span Я - парень
								label
									input(type="radio" name="gender")
									span Я - девушка

				section.right
					.container
						legend Важно знать!
						.someinfo
							.img
								
							ol
								li
									span Развивайтесь не смотря ни на что
								li
									span Не повторяйте за тем, кто повторяет
						.photo
							label
								input#photo(type="file" accept="image/*") 
								span#file_src Загрузить фото
						.agree
							label
								input(type="checkbox" name="agree" checked)
								span.yes
								span Я прочитал и соглашаюсь с <a href="">правилами</a> участия в акции.

						button(type="submit") Участвовать

	script(src="./script.js")