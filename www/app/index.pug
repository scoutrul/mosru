doctype html
html(lang="en")
	head
		<meta charset="UTF-8">
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=cyrillic")
		title Форма для mos.ru

	body
		script(src="./bundle.js")

		main.form_container
			form(class="form" autocomplite="on" name="form")
				section.left
					.container
						legend Ваши данные
						div.fieldset
							label
								input(type="text" name="fio" autofocus required)
								span
								.placeholder Введите ФИО
							label
								input(type="password" name="pass" required)
								span
								.placeholder Пароль
							label
								input(type="text" name="email" required )
								span
								.placeholder Email
							label
								select#list(name="city" onChange="list.className='placeholder_in'")
									option(selected disabled) 
									option Москва	
									option Санкт-Петербург	
									option Казань	
								.placeholder Город
							label
								input#tel.placeholder_out(type="tel" name="phone" onkeyup="tel.value !== '' ? tel.className='placeholder_in' : tel.className='placeholder_out'")
								span
								.placeholder Телефон
							.gender
								label
									input(type="radio" name="gender" checked)
									span Я - парень
								label
									input(type="radio" name="gender")
									span Я - девушка

				section.right
					.container
						legend Важно знать!
						.someinfo
							.img
								
							ol
								li
									span Развивайтесь не смотря ни на что
								li
									span Не повторяйте за тем, кто повторяет
						.photo
							label
								input(type="file") 
								span Загрузить фото
						.agree
							label
								input(type="checkbox" name="agree" checked)
								span.yes
								span Я прочитал и соглашаюсь с <a href="">правилами</a> участия в акции.

						button(type="submit") Участвовать

