.fieldset
		
	>label
		margin 0 0 1.5em 0
		
		input, option, select#list
			box-shadow none
			padding 1em 3em 1em 0
			flex 1 0 auto
			width 100%
			height 4.2em
			text-indent 1em
			border .1em solid $form_grey_light
			border-radius .3em
			outline none
			transition $transition
			box-shadow: inset 0 0 0 4em #fff; // anti-autofill mask

			&:valid
				~ .placeholder
					top 0
					font-weight 400
					font-size 70%

				&:focus
					border .1em solid $form_grey_focus
			&:focus:invalid
				border .1em solid $form_red
				~ .placeholder
					color $form_red

			~ .placeholder
				position absolute
				color #808890
				top 1em
				line-height 0em
				font-weight 600
				padding 1em 0
				text-indent 1em
				transition $transition
				
		input#pass 
			background url('/img/eye-a.svg') right no-repeat 
			background-size: 2.6em 3em;
			background-position: calc(100% - 1em);
			box-shadow: none!important;
			
		#showPass
			height: 100%;
			width: 2.6em;
			position: absolute;
			right: 1em;
			opacity: 0;
			z-index 20
			cursor pointer
			
			
		select#list 
			background url('/img/dwn-arrow.svg') right no-repeat 
			appearance none
			-webkit-appearance none
			cursor pointer
			padding-left 1em
			box-shadow none !important
			
			&::-ms-expand 
				display: none;
			

		input[required] // добаволяю звездочки *
			~ span
				&:after
					content '✱'
					height 1em
					width 1em
					display block
					color $form_red
					position absolute
					right -1.5em
					top 0

		.placeholder_in
			border .1em solid $form_grey_light !important	
			box-shadow: inset 0 0 0 4em #fff !important
			~ .placeholder 
				top 0 !important
				font-weight 400 !important
				font-size 70% !important
			&:focus
				border .1em solid $form_grey_focus !important
		.placeholder_out
			border .1em solid $form_grey_light !important	
			~ .placeholder 
				top 1em !important
				font-weight 600 !important
				font-size 100% !important

			&:focus
				border .1em solid $form_grey_focus !important
				~ .placeholder
					top 0  !important
					font-weight 400  !important
					font-size 70%  !important



				
