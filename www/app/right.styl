.form
	
	.someinfo 
		display flex
		justify-content center
		margin 0 0 auto
		flex-wrap wrap

		.img
			min-width 7em
			width 33%
			height 7em
			margin-bottom 2em
			flex: 1 0 auto;
			text-align: center;
			display: flex;
			align-items: center;
			justify-content: center;
			background url('/img/pic.png') no-repeat center
			background-size contain
			img
				max-width: 100%;
				height: 100%;

		ol 
			font-weight 600
			padding 0
			margin 0 0 0 3em
			width calc(100% - 7em)
			flex 1 0 9em

			li 
				margin-bottom 1.5em
				padding 0 .5em

			span 
				font-weight 300

	.photo
		margin 0 0 auto 0

		input
			display none

		label
			cursor pointer
			display block
			background-color #ffc739
			color #FFF
			border-radius .5em .5em 0
			line-height 11em
			font-weight 600
			text-align center
			margin 2em 0
			margin-right -2.7em
			text-transform uppercase
			transition $transition

			&:hover
				background-color #ffb700

			&:after
				content ''
				display block
				position absolute
				bottom -.7em
				right 0
				background #b58200
				width 2em
				height .8em
				border-radius 0 0 .5em 0
				z-index -1

			&:before
				content ''
				width calc(100% - 3em)
				height calc(100% - 3em)
				border .14em dashed #FFF
				border-radius .5em
				position absolute
				left 1.5em
				top 1.5em

	.agree // согласен с условиями
		margin 0 0 3em 0
		label
			cursor pointer
			input //убираю родной чекбокс
				display none
				
				& + .yes //замена на...
					border .08em solid $form_grey_light
					border-radius .5em
					width 1.7em
					height 1.8em
					float left
					margin 0 .6em 0
					color #ffc739
					cursor pointer
				&:checked + .yes
					display flex
					justify-content center
					align-items center
					background-color #f1f1f1
					box-shadow inset 1px 2px 1px #ecdfbe

					&:after //галочка
						content '√'

	button[type="submit"]
		width 100%
		text-align center
		height 4em
		background #2328ae
		text-transform uppercase
		border 0
		border-radius 2em
		color #FFF
		padding 1em
		cursor pointer
		transition $transition
		
		&:hover
			background lightness(#2328ae, 50%)
