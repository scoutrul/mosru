//установки
:root
	--screen calc(1em + 90vw/1000)
	--transition .1s ease

*
	position relative
	box-sizing border-box
	
html, body
	height 100%

body 
	background-color #856ed7
	line-height 2em
	font-family 'Roboto', sans-serif
	font-size var(--screen)
	margin 0
	background -webkit-linear-gradient(-45deg, #856ed8 0%,#2329ae 100%) fixed
	font-weight 300
	color #2a2e33
	
	*
		font-size var(--screen)
		margin 0

//контейнеры
.form_container 
	height 100%
	display flex
	margin auto auto 2em auto
	padding 2em
	
	.form
		min-height: 100%;
		width 100%
		display flex
		flex-direction row
		flex-wrap wrap
		background-color #FFF
		border-radius .3em
		max-width 1440px
		margin auto
		box-shadow 0 0 5em 0em rgb(37, 36, 113)
		a
			text-decoration none 
			color #5b50c6
			
		section
			flex 1 0 50%
			display flex
			flex-direction column
			padding 2em

			.container 
				height 100%
				display flex
				flex-direction column
				align-self stretch
				justify-content space-between
			
				legend 
					padding .3em 0 1em 5%
					letter-spacing -0.05em
					font-size 220%
					font-weight 900
					color #171b20
					white-space nowrap
					
				.fieldset
					height 100%
					display flex
					flex-direction column
					border 0
					padding 0
					justify-content: space-around;


